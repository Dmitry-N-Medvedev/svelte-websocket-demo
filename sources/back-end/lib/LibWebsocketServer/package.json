{
  "name": "@dmitry-n-medvedev/libwebsocketserver",
  "version": "0.0.0",
  "description": "WS implementation",
  "type": "module",
  "packageManager": "pnpm@7.21.0",
  "engines": {
    "node": "19.3.0",
    "pnpm": "7.21.0"
  },
  "engineStrict": true,
  "volta": {
    "node": "19.3.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "./node_modules/.bin/eslint ./ --ext .mjs",
    "test-skip": "pnpm run lint && NODE_ENV=test NODE_DEBUG=LibWebsocketServer* ./node_modules/.bin/c8 ./node_modules/.bin/mocha"
  },
  "dependencies": {
    "@dmitry-n-medvedev/common": "workspace:^0.0.0",
    "dotenv": "^16.0.3",
    "nanoid": "^4.0.0",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.15.0"
  },
  "devDependencies": {
    "c8": "^7.12.0",
    "chai": "^4.3.7",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "mocha": "^10.2.0",
    "ws": "^8.11.0"
  },
  "author": "Dmitry N. Medvedev <dmitry.medvedev@gmail.com>",
  "license": "MIT",
  "mocha": {
    "allowUncaught": true,
    "failZero": true,
    "async-only": false,
    "bail": true,
    "checkLeaks": true,
    "forbidOnly": true,
    "exit": true,
    "forbidPending": true,
    "slow": 50,
    "timeout": 1000,
    "color": true,
    "diff": true,
    "fullTrace": true,
    "growl": false,
    "inline-diffs": true,
    "reporter": "spec",
    "noConfig": true,
    "noOpts": true,
    "require": [
      "specs/mocha/mocha.mochaGlobalSetup.mjs",
      "specs/mocha/mocha.mochaGlobalTeardown.mjs"
    ],
    "exclude": [
      "**/node_modules/**/*"
    ],
    "spec": [
      "**/specs/*.mjs"
    ]
  }
}
